<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/card_day_overview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Today"
            android:textSize="24sp"/>

        <RelativeLayout
            android:id="@+id/card_day_title_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/card_day_overview_title"
            android:layout_marginTop="5dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/card_day_overview_hour_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_day_title_divider"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="1:00PM"
            android:textSize="24sp"/>

        <RelativeLayout
            android:id="@+id/card_day_content_divider_1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/card_day_overview_hour_1"
            android:layout_marginTop="5dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/card_day_overview_hour_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_day_content_divider_1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="2:00PM"
            android:textSize="24sp"/>

        <RelativeLayout
            android:id="@+id/card_day_content_divider_2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/card_day_overview_hour_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/card_day_overview_hour_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_day_content_divider_2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="3:00PM"
            android:textSize="24sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>